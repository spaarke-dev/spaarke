<?xml version="1.0" encoding="utf-8"?>
<!--
  Email Ribbons - Archive Email Button
  Version: 1.1.0

  Adds "Archive Email" button to Email form command bar.
  Button is only enabled for completed emails (statecode = 1) AND
  is hidden if email is already archived (has sprk_document record).

  Calls: Spaarke.Email.saveToDocument(primaryControl)
  Web Resource: sprk_emailactions.js

  Project: Email-to-Document Automation R2
  Task: 040
-->
<RibbonDiffXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <CustomActions>
    <!-- Add "Archive Email" button to Email form command bar -->
    <CustomAction Id="sprk.Email.ArchiveEmail.CustomAction"
                  Location="Mscrm.Form.email.MainTab.ExportData.Controls._children"
                  Sequence="10">
      <CommandUIDefinition>
        <Button Id="sprk.Email.ArchiveEmail.Button"
                Command="sprk.Email.ArchiveEmail.Command"
                Alt="$LocLabels:sprk.Email.ArchiveEmail.Button.Alt"
                LabelText="$LocLabels:sprk.Email.ArchiveEmail.Button.LabelText"
                ToolTipTitle="$LocLabels:sprk.Email.ArchiveEmail.Button.ToolTipTitle"
                ToolTipDescription="$LocLabels:sprk.Email.ArchiveEmail.Button.ToolTipDescription"
                TemplateAlias="o1"
                Image16by16="/_imgs/ribbon/FileSave_16.png"
                Image32by32="/_imgs/ribbon/FileSave_32.png"
                ModernImage="Save" />
      </CommandUIDefinition>
    </CustomAction>
  </CustomActions>

  <Templates>
    <RibbonTemplates Id="Mscrm.Templates"></RibbonTemplates>
  </Templates>

  <CommandDefinitions>
    <!-- Command for Archive Email button -->
    <CommandDefinition Id="sprk.Email.ArchiveEmail.Command">
      <EnableRules>
        <EnableRule Id="sprk.Email.ArchiveEmail.EnableRule" />
      </EnableRules>
      <DisplayRules>
        <DisplayRule Id="sprk.Email.ArchiveEmail.DisplayRule.Web" />
        <DisplayRule Id="sprk.Email.ArchiveEmail.DisplayRule.NotArchived" />
      </DisplayRules>
      <Actions>
        <JavaScriptFunction Library="$webresource:sprk_emailactions.js"
                            FunctionName="Spaarke.Email.saveToDocument">
          <CrmParameter Value="PrimaryControl" />
        </JavaScriptFunction>
      </Actions>
    </CommandDefinition>
  </CommandDefinitions>

  <RuleDefinitions>
    <TabDisplayRules />

    <DisplayRules>
      <!-- Display only on Web client (not mobile) -->
      <DisplayRule Id="sprk.Email.ArchiveEmail.DisplayRule.Web">
        <CrmClientTypeRule Type="Web" />
      </DisplayRule>
      <!-- Display only if email is NOT already archived (no sprk_document exists) -->
      <DisplayRule Id="sprk.Email.ArchiveEmail.DisplayRule.NotArchived">
        <CustomRule Library="$webresource:sprk_emailactions.js"
                    FunctionName="Spaarke.Email.canArchiveEmail"
                    Default="true">
          <CrmParameter Value="PrimaryControl" />
        </CustomRule>
      </DisplayRule>
    </DisplayRules>

    <EnableRules>
      <!-- Enable only for completed emails (statecode = 1) -->
      <EnableRule Id="sprk.Email.ArchiveEmail.EnableRule">
        <CustomRule Library="$webresource:sprk_emailactions.js"
                    FunctionName="Spaarke.Email.canSaveToDocument"
                    Default="false">
          <CrmParameter Value="PrimaryControl" />
        </CustomRule>
      </EnableRule>
    </EnableRules>
  </RuleDefinitions>

  <LocLabels>
    <LocLabel Id="sprk.Email.ArchiveEmail.Button.Alt">
      <Titles>
        <Title description="Archive Email" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.ArchiveEmail.Button.LabelText">
      <Titles>
        <Title description="Archive Email" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.ArchiveEmail.Button.ToolTipTitle">
      <Titles>
        <Title description="Archive Email to SDAP" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.ArchiveEmail.Button.ToolTipDescription">
      <Titles>
        <Title description="Archive this email as an SDAP document with .eml file. Attachments will be saved as separate documents. AI analysis will be triggered automatically." languagecode="1033" />
      </Titles>
    </LocLabel>
  </LocLabels>
</RibbonDiffXml>
