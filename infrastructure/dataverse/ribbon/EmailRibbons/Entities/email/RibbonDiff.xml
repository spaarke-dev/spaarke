<?xml version="1.0" encoding="utf-8"?>
<!--
  Email Ribbons - Save to Document Button
  Version: 1.0.0

  Adds "Save to Document" button to Email form command bar.
  Button is only enabled for completed emails (statecode = 1).

  Calls: Spaarke.Email.saveToDocument(primaryControl)
  Web Resource: sprk_emailactions.js

  Project: Email-to-Document Automation
  Task: 031
-->
<RibbonDiffXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <CustomActions>
    <!-- Add "Save to Document" button to Email form command bar -->
    <CustomAction Id="sprk.Email.SaveToDocument.CustomAction"
                  Location="Mscrm.Form.email.MainTab.ExportData.Controls._children"
                  Sequence="10">
      <CommandUIDefinition>
        <Button Id="sprk.Email.SaveToDocument.Button"
                Command="sprk.Email.SaveToDocument.Command"
                Alt="$LocLabels:sprk.Email.SaveToDocument.Button.Alt"
                LabelText="$LocLabels:sprk.Email.SaveToDocument.Button.LabelText"
                ToolTipTitle="$LocLabels:sprk.Email.SaveToDocument.Button.ToolTipTitle"
                ToolTipDescription="$LocLabels:sprk.Email.SaveToDocument.Button.ToolTipDescription"
                TemplateAlias="o1"
                Image16by16="/_imgs/ribbon/FileSave_16.png"
                Image32by32="/_imgs/ribbon/FileSave_32.png"
                ModernImage="Save" />
      </CommandUIDefinition>
    </CustomAction>
  </CustomActions>

  <Templates>
    <RibbonTemplates Id="Mscrm.Templates"></RibbonTemplates>
  </Templates>

  <CommandDefinitions>
    <!-- Command for Save to Document button -->
    <CommandDefinition Id="sprk.Email.SaveToDocument.Command">
      <EnableRules>
        <EnableRule Id="sprk.Email.SaveToDocument.EnableRule" />
      </EnableRules>
      <DisplayRules>
        <DisplayRule Id="sprk.Email.SaveToDocument.DisplayRule" />
      </DisplayRules>
      <Actions>
        <JavaScriptFunction Library="$webresource:sprk_emailactions.js"
                            FunctionName="Spaarke.Email.saveToDocument">
          <CrmParameter Value="PrimaryControl" />
        </JavaScriptFunction>
      </Actions>
    </CommandDefinition>
  </CommandDefinitions>

  <RuleDefinitions>
    <TabDisplayRules />

    <DisplayRules>
      <!-- Display only on Web client (not mobile) -->
      <DisplayRule Id="sprk.Email.SaveToDocument.DisplayRule">
        <CrmClientTypeRule Type="Web" />
      </DisplayRule>
    </DisplayRules>

    <EnableRules>
      <!-- Enable only for completed emails (statecode = 1) -->
      <EnableRule Id="sprk.Email.SaveToDocument.EnableRule">
        <CustomRule Library="$webresource:sprk_emailactions.js"
                    FunctionName="Spaarke.Email.canSaveToDocument"
                    Default="false">
          <CrmParameter Value="PrimaryControl" />
        </CustomRule>
      </EnableRule>
    </EnableRules>
  </RuleDefinitions>

  <LocLabels>
    <LocLabel Id="sprk.Email.SaveToDocument.Button.Alt">
      <Titles>
        <Title description="Save to Document" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.SaveToDocument.Button.LabelText">
      <Titles>
        <Title description="Save to Document" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.SaveToDocument.Button.ToolTipTitle">
      <Titles>
        <Title description="Save Email to SDAP Document" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="sprk.Email.SaveToDocument.Button.ToolTipDescription">
      <Titles>
        <Title description="Convert this email to an SDAP document with .eml file for archival and AI processing. Attachments will be saved as separate documents." languagecode="1033" />
      </Titles>
    </LocLabel>
  </LocLabels>
</RibbonDiffXml>
