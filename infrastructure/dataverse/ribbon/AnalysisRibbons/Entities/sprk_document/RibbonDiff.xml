<?xml version="1.0" encoding="utf-8"?>
<RibbonDiffXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <CustomActions>
    <!-- + New Analysis button on sprk_document Form Command Bar -->
    <CustomAction Id="sprk.Analysis.NewAnalysis.Button.CustomAction"
                  Location="Mscrm.Form.sprk_document.MainTab.Actions.Controls._children"
                  Sequence="10">
      <CommandUIDefinition>
        <Button
          Id="Spaarke.Analysis.NewAnalysis.Button"
          Command="Spaarke.Analysis.NewAnalysis.Command"
          Alt="$LocLabels:Spaarke.Analysis.NewAnalysis.Button.Alt"
          LabelText="$LocLabels:Spaarke.Analysis.NewAnalysis.Button.LabelText"
          ToolTipTitle="$LocLabels:Spaarke.Analysis.NewAnalysis.Button.ToolTipTitle"
          ToolTipDescription="$LocLabels:Spaarke.Analysis.NewAnalysis.Button.ToolTipDescription"
          Image16by16="$webresource:sprk_AnalysisIcon16.svg"
          Image32by32="$webresource:sprk_AnalysisIcon32.svg"
          ModernImage="$webresource:sprk_AnalysisIcon32.svg"
          Sequence="10"
          TemplateAlias="o1" />
      </CommandUIDefinition>
    </CustomAction>
  </CustomActions>

  <Templates>
    <RibbonTemplates Id="Mscrm.Templates"></RibbonTemplates>
  </Templates>

  <CommandDefinitions>
    <!-- Form Command: + New Analysis (on Document form command bar) -->
    <CommandDefinition Id="Spaarke.Analysis.NewAnalysis.Command">
      <EnableRules>
        <EnableRule Id="Spaarke.Analysis.NewAnalysis.EnableRule" />
      </EnableRules>
      <DisplayRules>
        <DisplayRule Id="Spaarke.Analysis.NewAnalysis.DisplayRule" />
      </DisplayRules>
      <Actions>
        <JavaScriptFunction FunctionName="Spaarke_NewAnalysis" Library="$webresource:sprk_analysis_commands.js">
          <CrmParameter Value="PrimaryControl" />
        </JavaScriptFunction>
      </Actions>
    </CommandDefinition>
  </CommandDefinitions>

  <RuleDefinitions>
    <TabDisplayRules />

    <DisplayRules>
      <!-- Always display the button on web client -->
      <DisplayRule Id="Spaarke.Analysis.NewAnalysis.DisplayRule">
        <CrmClientTypeRule Type="Web" />
      </DisplayRule>
    </DisplayRules>

    <EnableRules>
      <!-- Form button enable rule: Check if document is saved and has file -->
      <EnableRule Id="Spaarke.Analysis.NewAnalysis.EnableRule">
        <CustomRule FunctionName="Spaarke_EnableNewAnalysis" Library="$webresource:sprk_analysis_commands.js" Default="false">
          <CrmParameter Value="PrimaryControl" />
        </CustomRule>
      </EnableRule>
    </EnableRules>
  </RuleDefinitions>

  <LocLabels>
    <LocLabel Id="Spaarke.Analysis.NewAnalysis.Button.Alt">
      <Titles>
        <Title description="+ New Analysis" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="Spaarke.Analysis.NewAnalysis.Button.LabelText">
      <Titles>
        <Title description="+ New Analysis" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="Spaarke.Analysis.NewAnalysis.Button.ToolTipTitle">
      <Titles>
        <Title description="Create New Analysis" languagecode="1033" />
      </Titles>
    </LocLabel>
    <LocLabel Id="Spaarke.Analysis.NewAnalysis.Button.ToolTipDescription">
      <Titles>
        <Title description="Create a new AI-powered analysis for this document. Configure actions, skills, and output options." languagecode="1033" />
      </Titles>
    </LocLabel>
  </LocLabels>
</RibbonDiffXml>
