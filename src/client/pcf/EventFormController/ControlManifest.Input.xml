<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="Spaarke.Controls" constructor="EventFormController" version="1.0.5" display-name-key="Event Form Controller" description-key="Controls Event form field visibility based on Event Type configuration" control-type="standard">
    <external-service-usage enabled="false">
    </external-service-usage>
    <!-- Bound field - attach control to any text field on the form (e.g., Event Name) -->
    <!-- The control reads Event Type lookup internally, this just provides an attachment point -->
    <property name="boundField" display-name-key="Bound Field" description-key="Text field to attach this control to (control reads Event Type internally)" of-type="SingleLine.Text" usage="bound" required="true" />
    <!-- Event Type Field Name - configure which lookup field contains the Event Type -->
    <property name="eventTypeFieldName" display-name-key="Event Type Field Name" description-key="Logical name of the Event Type lookup field (default: sprk_eventtype)" of-type="SingleLine.Text" usage="input" required="false" default-value="sprk_eventtype" />
    <!-- Form Control Status (output for debugging) -->
    <property name="controlStatus" display-name-key="Control Status" description-key="Current status of the form controller" of-type="SingleLine.Text" usage="output" required="false" />
    <resources>
      <code path="index.ts" order="1" />
      <css path="styles.css" order="1" />
      <!-- Platform-provided libraries: DO NOT bundle -->
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
      <uses-feature name="Utility" required="true" />
    </feature-usage>
  </control>
</manifest>
