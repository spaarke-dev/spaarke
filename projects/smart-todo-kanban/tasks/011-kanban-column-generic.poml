<task id="011" project="smart-todo-kanban">
  <metadata>
    <title>Create generic KanbanColumn component</title>
    <phase>2 — Reusable DnD Components</phase>
    <estimate>45min</estimate>
    <tags>component, dnd, reusable</tags>
    <dependencies>010</dependencies>
    <rigor>FULL</rigor>
