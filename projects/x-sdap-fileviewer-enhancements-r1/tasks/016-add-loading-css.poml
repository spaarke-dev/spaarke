    Complete CSS:
    
    /* Loading State */
    .file-viewer-loading {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.95);
        z-index: 100;
        opacity: 1;
        transition: opacity 0.2s ease-out;
    }
    
    .file-viewer-loading.hidden {
        opacity: 0;
        pointer-events: none;
    }
    
    .loading-spinner {
        width: 32px;
        height: 32px;
        border: 3px solid #f3f2f1;
        border-top: 3px solid #0078d4;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }
    
    .loading-text {
        margin-top: 12px;
        color: #323130;
        font-size: 14px;
        font-family: "Segoe UI", sans-serif;
    }
    
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    /* Error State */
    .file-viewer-error {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #ffffff;
        z-index: 100;
    }
    
    .error-icon {
        width: 48px;
        height: 48px;
        color: #a4262c;
    }
    
    .error-message {
        margin-top: 12px;
        color: #323130;
        font-size: 14px;
        text-align: center;
    }
    
    .retry-btn {
        margin-top: 16px;
        padding: 8px 16px;
        background: #0078d4;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
    }
    
    .retry-btn:hover {
        background: #106ebe;
    }
    
    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        .loading-spinner {
            animation: none;
            border-top-color: #0078d4;
        }
        
        .file-viewer-loading {
            transition: none;
        }
    }
  </notes>
