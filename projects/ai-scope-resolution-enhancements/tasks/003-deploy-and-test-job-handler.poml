<?xml version="1.0" encoding="UTF-8"?>
<task id="003" project="ai-scope-resolution-enhancements">
  <metadata>
    <title>Deploy and Test Job Handler Fix</title>
    <phase>0</phase>
    <tags>bff-api, deploy, testing</tags>
    <estimate>2-3 hours</estimate>
    <dependencies>002</dependencies>
    <parallel-group>none</parallel-group>
  </metadata>

  <prompt>
    <goal>
      Deploy the job handler fix to dev environment and verify AppOnlyDocumentAnalysis jobs are processed successfully.
    </goal>
    <context>
      After fixing the job handler registration, we need to deploy and test:
      1. Build publish.zip package
      2. Deploy to spe-api-dev-67e2xz via Kudu
      3. Trigger a test job (email processing)
      4. Verify no dead-letter errors
      5. Confirm sprk_analysis records created
    </context>
    <constraints>
      - Use existing deployment scripts where possible
      - Monitor Application Insights for errors
      - Do NOT clear dead-letter queue until fix is verified
    </constraints>
  </prompt>

  <knowledge>
    <files>
      <file>scripts/Deploy-BffApi.ps1</file>
      <file>scripts/Test-SdapBffApi.ps1</file>
      <file>.claude/skills/azure-deploy/SKILL.md</file>
    </files>
  </knowledge>

  <steps>
    <step order="1">
      Build publish package:
      - cd src/server/api/Sprk.Bff.Api
      - dotnet publish -c Release -o ./publish
      - Create publish.zip from ./publish folder
    </step>
    <step order="2">
      Deploy to Azure App Service:
      - Use Kudu ZIP deploy API
      - Target: spe-api-dev-67e2xz
      - POST to /api/zipdeploy
    </step>
    <step order="3">
      Verify deployment:
      - Check /healthz endpoint returns 200
      - Check Application Insights for startup logs
      - Verify handler registration logs appear
    </step>
    <step order="4">
      Test with actual email processing:
      - Use Outlook add-in to save an email as document
      - OR trigger existing test flow
      - Wait for processing to complete
    </step>
    <step order="5">
      Verify success:
      - Check Service Bus dead-letter queue (should NOT have new NoHandler messages)
      - Check sprk_analysis records created in Dataverse
      - Check Application Insights for successful job completion logs
    </step>
  </steps>

  <tools>
    <tool>Bash - Build and deploy commands</tool>
    <tool>WebFetch - Check health endpoint</tool>
  </tools>

  <outputs>
    <output>Deployed publish.zip</output>
    <output>Verification that jobs process successfully</output>
    <output>No new NoHandler dead-letter messages</output>
  </outputs>

  <acceptance-criteria>
    <criterion>API deployed and healthy (/healthz returns 200)</criterion>
    <criterion>No "NoHandler" dead-letter messages for AppOnlyDocumentAnalysis</criterion>
    <criterion>sprk_analysis records created for test documents</criterion>
    <criterion>Application Insights shows handler executing</criterion>
  </acceptance-criteria>
</task>
