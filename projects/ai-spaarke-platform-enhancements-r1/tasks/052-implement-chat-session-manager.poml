    <criterion testable="true">Summarization triggers at 15 messages</criterion>
    <criterion testable="true">Cache TTL is 24 hours (sliding)</criterion>
    <criterion testable="true">Unit tests pass</criterion>
    <criterion testable="true">dotnet build succeeds with 0 errors</criterion>
  </acceptance-criteria>
</task>
