    <criterion testable="true">IdempotencyKey = "{tenantId}:{documentId}"</criterion>
    <criterion testable="true">AnalysisOrchestrationService emits RagIndexingJob after analysis</criterion>
    <criterion testable="true">Unit tests pass (4 test cases minimum)</criterion>
    <criterion testable="true">dotnet build succeeds with 0 errors</criterion>
  </acceptance-criteria>
</task>
