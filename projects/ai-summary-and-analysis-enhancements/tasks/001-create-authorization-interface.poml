<task id="001" project="ai-summary-and-analysis-enhancements">
  <metadata>
    <title>Create IAiAuthorizationService Interface</title>
    <phase>2.1</phase>
    <estimate>1-2 hours</estimate>
    <tags>api, authorization, interface, adr-008, adr-013</tags>
    <dependencies>none</dependencies>
