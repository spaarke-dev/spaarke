    </files>
    <patterns>
      <pattern name="Minimal API endpoint" location="src/server/api/Spe.Bff.Api/Program.cs">
        app.MapGet("/api/endpoint", async (params, services) => { ... })
           .RequireAuthorization()
           .WithTags("TagName");
