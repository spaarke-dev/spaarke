<task id="002" project="email-communication-solution-r1">
  <metadata>
    <title>Create approved sender validation service</title>
    <phase>1: BFF Email Service</phase>
    <status>not-started</status>
    <estimated-hours>3</estimated-hours>
    <dependencies>none</dependencies>
    <blocks>003</blocks>
    <tags>bff-api, auth</tags>
    <rigor-hint>STANDARD</rigor-hint>
    <rigor-reason>New files only, constrained validation pattern</rigor-reason>
