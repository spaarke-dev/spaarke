  <prompt>
    <goal>Implement optimistic UI pattern - update grid immediately, rollback on error.</goal>

    <context>
      When save succeeds, notify grid to update that row immediately.
      If save fails, rollback local changes and show error.
    </context>

    <constraints>
      - Call grid's updateRow callback on save
      - Rollback to previous values on error
      - Preserve user's unsaved changes during rollback decision
    </constraints>
  </prompt>

  <steps>
    <step order="1">Store original values before editing</step>
    <step order="2">On save success, call grid updateRow callback</step>
    <step order="3">On save error, offer rollback option</step>
    <step order="4">Implement rollback to original values</step>
    <step order="5">Allow user to retry or discard</step>
  </steps>

  <outputs>
    <artifact type="file">src/solutions/EventDetailSidePane/src/hooks/useOptimisticUpdate.ts</artifact>
    <artifact type="file">src/solutions/EventDetailSidePane/src/App.tsx (updated)</artifact>
  </outputs>

  <acceptance-criteria>
    <criterion>Grid updates on save success</criterion>
    <criterion>Rollback works on error</criterion>
    <criterion>User can retry save</criterion>
  </acceptance-criteria>
</task>
