  <metadata>
    <title>Add Optimistic UI with Error Rollback</title>
    <phase>4</phase>
    <tags>custom-page, sidepane, optimistic-ui</tags>
    <estimate>2 hours</estimate>
    <dependencies>040</dependencies>
    <parallel-group>C</parallel-group>
