  <metadata>
    <title>Add Dark Mode and Theme Support</title>
    <phase>1</phase>
    <tags>pcf, calendar, theming, dark-mode</tags>
    <estimate>2 hours</estimate>
    <dependencies>002</dependencies>
    <parallel-group>A</parallel-group>
    <status>pending</status>
