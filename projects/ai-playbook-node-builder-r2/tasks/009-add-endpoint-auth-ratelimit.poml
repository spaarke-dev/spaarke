    </files>
  </knowledge>

  <steps>
    <step order="1">Create/update endpoint authorization filter</step>
    <step order="2">Configure rate limiting policy "ai-builder"</step>
    <step order="3">Apply filter and rate limit to endpoint</step>
    <step order="4">Implement 429 ProblemDetails response</step>
    <step order="5">Test authorization rejection</step>
    <step order="6">Test rate limit exceeded response</step>
  </steps>

  <tools>
    <tool name="Edit">Update endpoint and configuration</tool>
