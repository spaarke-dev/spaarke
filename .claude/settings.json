{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "model": "opus",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Skill(*)",
      "Task(*)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(dotnet *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(az *)",
      "Bash(pac *)",
      "Bash(claude *)",
      "Bash(wc *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(* --version)",
      "Bash(* --help)",
      "Bash(xargs -I {} sh -c 'echo \"\"=== {} ===\"\" && tail -50 {}')"
    ]
  }
}
