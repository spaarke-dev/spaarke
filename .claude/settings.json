      "Bash(gh secret set:*)",
      "Bash(gh secret:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh api:*)",
